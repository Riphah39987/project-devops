# GCP Project ID (REQUIRED - Set this to your GCP project ID)
project_id = "your-gcp-project-id"

# GCP Region
region = "us-central1"

# GCP Zone
zone = "us-central1-a"

# Environment
environment = "dev"

# Project Name
project_name = "devops-multicloud"

# VPC Configuration
vpc_name    = "devops-vpc"
subnet_cidr = "10.2.0.0/24"

# GKE Configuration
gke_cluster_name = "devops-gke-cluster"
gke_node_count   = 2
gke_machine_type = "e2-medium"
gke_min_nodes    = 1
gke_max_nodes    = 3

# Cloud SQL Configuration
db_instance_name = "devops-postgres-instance"
db_version       = "POSTGRES_15"
db_tier          = "db-f1-micro"
db_name          = "devopsdb"
db_user          = "dbadmin"
# Set password via environment variable: TF_VAR_db_password
# Or uncomment and set: db_password = "YourSecurePassword123!"
